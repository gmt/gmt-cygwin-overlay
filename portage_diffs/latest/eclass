+				local dll="" dlltool
+				dlltool="$( which $( tc-getDLLTOOL ) )"
+				if [[ -x "${dlltool}" ]] ; then
+					dll="$( echo $( ${dlltool} -I "${ED%/}"/usr/${libdir}/${lib} || echo xxxFAILFAILFAILxxx) )"
+					if [[ $dll == *xxxFAILFAILFAILxxx ]] ; then
+						ewarn
+						ewarn "gen_usr_ldscript: uhoh, dlltool failed."
+						dll=""
+					fi
+				else
+					ewarn
