+				if [[ -f "${ED%/}"/usr/bin/${dll} ]] ; then
+					mv "${ED%/}"/usr/bin/${dll} "${ED%/}"/bin/ || \
+						die "gen_usr_ldscript: Could not move '${dll}'"
+				# if the package is dumb, the .dll will be in lib:
+				elif [[ -f "${ED%/}"/usr/${libdir}/${dll} ]] ; then
+					mv "${ED%/}"/usr/${libdir}/${dll} "${ED%/}"/bin/ || \
+						die "gen_usr_ldscript: Could not move '${dll}'"
