+				fi
+				if [[ $dll == "" ]] ; then
+					dll_guess() {
+						local l="${1}"
+						shift
+						local x
+						for x in $* ; do
+							if [[ -f ${x} ]] ; then
+								x=${x##*/}
+								case "${x}" in
+									cyg${l}.dll|cyg${l}-[0-9]*.dll)
+										dll_guessed="${x}"
+										return 0
+										;;
+									*)
+										ewarn "Rejected \"${x}\""
+										continue
+										;;
+								esac
+							fi
+							return 1
+						done
+					}
+					dll_guessed=""
